<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white">\
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#AFE3FD">
            <LinearLayout
                android:id="@+id/btnDoorDelete"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivDelete"
                    android:src="@drawable/delete"
                    android:layout_marginTop="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/doorimg"
                    android:src="@drawable/home"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ECECEC"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/doorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도어락 이름"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="24dp"
                android:textColor="#7E7E7B"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/doornumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="도어락 번호"
                android:textColor="#CC868686"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/doorreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:text="도어락 등록일"
                android:textColor="#CC868686"
                android:textSize="20dp"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>