<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".pin_register1">
    <TextView
        android:text="pin번호 등록"
        android:textSize="20dp"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="도어락 잠금을 해제하기 위한 pin 번호 5자리를 입력하세요."
        android:gravity="center"
        android:textColor="#333333"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_r1_pin1"
            android:width="40dp"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_r1_pin2"
            android:width="40dp"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_r1_pin3"
            android:width="40dp"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_r1_pin4"
            android:width="40dp"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_r1_pin5"
            android:width="40dp"
            android:textSize="20dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_pin_next"
        android:text="다음"
        android:enabled="false"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>