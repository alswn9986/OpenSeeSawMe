<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".RegisterDoorlock4">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/toolbar_title"
            android:text="도어락 등록"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="STEP 4/4"
                android:textSize="30dp"
                android:textColor="#2196F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="인증이 완료되었습니다.\n등록할 도어록의 정보를 입력해주세요."
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="도어락 사진"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/llGallery"
                        android:background="#F1F1F1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:id="@+id/ivGallery"
                            android:src="@drawable/ic_gallery"
                            android:layout_marginBottom="5dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <TextView
                            android:id="@+id/tvGallery"
                            android:textSize="12dp"
                            android:text="갤러리에서\n이미지 선택"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llHome"
                        android:background="#F1F1F1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:src="@drawable/house"
                            android:layout_marginBottom="5dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <TextView
                            android:textSize="12dp"
                            android:text="집 이미지"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llCor"
                        android:background="#F1F1F1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:src="@drawable/company"
                            android:layout_marginBottom="5dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <TextView
                            android:textSize="12dp"
                            android:text="회사 이미지"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="도어락 이름"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtDoorName"
                        android:hint="입력하지 않으면 우리집으로 저장됩니다."
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnNext"
            android:text="도어락 이용하러 가기"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/register_next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>
</LinearLayout>