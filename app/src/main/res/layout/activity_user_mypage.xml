<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 툴바 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:text="내정보"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        tools:context=".UserMypaget">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/myimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/username2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="8dp"
                android:text="한민주"
                android:textColor="#333333"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/remain_battery_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username2"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/door_img_id"
                android:text="dadad.naver.con"
                android:textColor="#333333"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/changebtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-1269dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/username2"
                android:src="@drawable/pencel" />


        </RelativeLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="#B8B8B8" />

        <Button
            android:id="@+id/passwordchange"
            android:text="패스워드 변경"
            android:textSize="16dp"
            android:gravity="left|center"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/userout"
            android:text="회원 탈퇴"
            android:textSize="16dp"
            android:gravity="left|center"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/logout"
            android:text="로그아웃"
            android:textSize="16dp"
            android:gravity="left|center"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>