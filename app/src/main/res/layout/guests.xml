<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/sentgkey"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#F5F5F5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E7E7E7"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_guest"
                android:src="@drawable/person1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txt_gname"
                android:text="이시원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="#333333"
                android:textSize="18dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_valdate"
            android:text="출입날짜 : 2019.05.25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="bottom|center"/>
        <TextView
            android:id="@+id/txt_keyfrom"
            android:text="From.손감자"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7f7f7f"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_dday"
        android:text="3일 남음"
        android:textSize="16dp"
        android:textColor="#fff"
        android:background="#B7000000"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/linear_black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#45000000"
        android:orientation="vertical"/>


</RelativeLayout>